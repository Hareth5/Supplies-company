<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="899.0" prefWidth="1566.0"
	xmlns="http://javafx.com/javafx/17.0.13"
	xmlns:fx="http://javafx.com/fxml/1">

	<center>
		<TableView fx:id="shipmentTable" prefHeight="665.0"
			prefWidth="990.0" BorderPane.alignment="TOP_CENTER">
			<BorderPane.margin>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</BorderPane.margin>
			<columns>
				<TableColumn fx:id="shipmentIdColumn" prefWidth="45.6"
					text="Shipment ID" />
				<TableColumn fx:id="shipmentDateColumn" prefWidth="82.4"
					text="Date" />
				<TableColumn fx:id="manufacturerColumn" prefWidth="86.4"
					text="Manufacturer" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>

	<bottom>
		<HBox prefHeight="62.0" prefWidth="1318.0" spacing="20.0"
			BorderPane.alignment="BOTTOM_LEFT">
			<children>
				<Button fx:id="updateButton" mnemonicParsing="false"
					prefHeight="55.0" prefWidth="154.0" text="Update" />
				<Button fx:id="removeButton" mnemonicParsing="false"
					prefHeight="55.0" prefWidth="154.0" text="Remove" />
				<Button fx:id="showDetailsButton" layoutX="10.0"
					layoutY="10.0" mnemonicParsing="false" prefHeight="55.0"
					prefWidth="163.0" text="Show Shipment details" />
			</children>
			<BorderPane.margin>
				<Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
			</BorderPane.margin>
		</HBox>
	</bottom>
</BorderPane>
